{
    "name"              : "SoundSuggest",
    "version"           : "1.6",
    "manifest_version"  : 2,
    "description"       : "Last.fm API recommendations.",
    "background"        :
    {
        "page"       : "background.html",
        "persistent" : true
    },
    "content_scripts" :
    [
        {
            "matches" :
            [
                "*://www.last.fm/home/recs*"
            ],
            "exclude_matches" :
            [
                
            ],
            "css" :
            [
                "css/fancybox/jquery.fancybox.css",
                "css/infovis/infovis.whitebox.cf.css",
                "css/style.css"
            ],
            "js" :
            [
                "js/lib/jquery/jquery-1.8.3.js",
                "js/lib/jquery/jquery.mousewheel-3.0.6.pack.js",
                "js/lib/fancybox/jquery.fancybox.pack.js",
                "js/lib/purl/purl.js",
                "js/lib/d3/d3.v3.min.js",
                "js/lib/spin/spin.min.js",
                "js/lib/lastfm/lastfm.api.chrome.js",
                "js/lib/infovis/infovis.whitebox.cf.js",
                "js/main.js"
            ]
        }
    ],
    "permissions" :
    [
        "tabs",
        "storage",
        "*://ws.audioscrobbler.com/2.0/*",
        "*://www.last.fm/home/recs*"
    ],
    "page_action" :
    {
        "default_icon" :
        {
            "19" : "data/img/icon19.png",
            "38" : "data/img/icon38.png"
        },
        "default_title": "SoundSuggest"
    },
    "content_security_policy" : "script-src 'self' https://ws.audioscrobbler.com/2.0/ https://x8-esoteric-code-c.appspot.com/; object-src 'self'",
    "web_accessible_resources":
    [
        "data/img/fancybox/blank.gif",
        "data/img/fancybox/fancybox_loading.gif",
        "data/img/fancybox/fancybox_overlay.png",
        "data/img/fancybox/fancybox_sprite.png"
    ]
}